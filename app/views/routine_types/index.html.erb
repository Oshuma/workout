<nav>
  <ol class="breadcrumb">
    <li class="breadcrumb-item active"><%= link_to('Routine Types', routine_types_path) %></li>
  </ol>
</nav>

<div class="row mb-3">
  <div class="col">
    <%= link_to('New Routine Type', new_routine_type_path, data: { toggle: 'modal', target: '#new-routine-type-modal' }, remote: true, class: 'btn btn-primary') %>
  </div>
</div>
<div id="new-routine-type-modal" class="modal fade" tabindex="-1" role="dialog"></div>

<div class="table-responsive">
  <table class="table table-hover">
    <thead>
      <tr>
        <th scope="col" style="width: 5%;"></th>
        <th scope="col">Name</th>
        <th scope="col">Rest Time</th>
        <th scope="col">Routines</th>
      </tr>
    </thead>

    <tbody>
      <% @routine_types.each do |routine_type| %>
        <tr>
          <td><%= render 'actions', routine_type: routine_type %></td>
          <td><%= link_to(routine_type.name, routine_type) %></td>
          <td><%= pluralize(routine_type.rest_time, 'second') %></td>
          <td><%= routine_type.routines.count %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
