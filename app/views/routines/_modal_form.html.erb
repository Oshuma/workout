<div class="modal-dialog modal-dialog-centered" role="document">
  <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title"><%= @routine.full_title %></h5>

      <button type="button" class="close" data-dismiss="modal">
        <span>&times;</span>
      </button>
    </div>

    <%= form_for([@workout, @routine]) do |f| %>
      <div class="modal-body">
        <div class="form-group">
          <%= f.select(:routine_type_id,
                       options_from_collection_for_select(@routine_types, :id, :name, @routine.routine_type_id),
                       {prompt: '-- Routine Type --'},
                       {class: 'custom-select'}) %>
        </div>

        <div class="form-group">
          <%= f.label(:set_number, 'Set') %>
          <%= f.number_field(:set_number, class: 'form-control') %>
        </div>

        <div class="form-group">
          <%= f.label(:lbs, 'lbs') %>
          <%= f.number_field(:lbs, class: 'form-control') %>
        </div>

        <div class="form-group">
          <%= f.label(:reps, 'reps') %>
          <%= f.number_field(:reps, class: 'form-control') %>
        </div>

        <div class="form-group">
          <%= f.label(:minutes, 'minutes') %>
          <%= f.number_field(:minutes, class: 'form-control') %>
        </div>

        <div class="form-group">
          <%= f.label(:distance, 'distance') %>
          <%= f.number_field(:distance, step: :any, min: 0, class: 'form-control') %>
        </div>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-light" data-dismiss="modal">Cancel</button>
        <%= f.submit('Save', class: 'btn btn-primary') %>
      </div>
    <% end %>
  </div>
</div>
