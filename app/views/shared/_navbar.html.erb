<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
  <%= link_to('Workout', root_path, class: 'navbar-brand') %>

  <ul class="navbar-nav mr-auto">
    <% if show_start_workout_button? %>
      <li class="nav-item <%= 'active' if current_page?(new_workout_path) %>">
        <%= link_to('Start', new_workout_path, class: 'btn btn-outline-light my-2 my-sm-0') %>
      </li>
    <% end %>
  </ul>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav">
      <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to(routine_types_path, class: 'nav-link') do %>
            <%= icon('fas', 'dumbbell', class: 'fa-fw') %> Routine Types
          <% end %>
        </li>

        <li class="nav-item">
          <%= link_to(graphs_workouts_path, class: 'nav-link') do %>
            <%= icon('fas', 'chart-line', class: 'fa-fw') %> Graphs
          <% end %>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to(new_user_session_path, class: 'nav-link') do %>
            <%= icon('fas', 'sign-in-alt', class: 'fa-fw') %> Login
          <% end %>
        </li>
      <% end %>
    </ul>

    <% if user_signed_in? %>
      <ul class="navbar-nav ml-auto">
        <li class="nav-item dropdown">
          <a href="#" class="nav-link dropdown-toggle" role="button" data-toggle="dropdown">
            <%= icon('fas', 'user', class: 'fa-fw') %>
          </a>

          <div class="dropdown-menu dropdown-menu-right">
            <%= link_to(settings_path, class: 'dropdown-item') do %>
              <%= icon('fas', 'cog', class: 'fa-fw') %> Settings
            <% end %>

            <div class="dropdown-divider"></div>

            <%= link_to(destroy_user_session_path, method: :delete, class: 'dropdown-item') do %>
              <%= icon('fas', 'sign-out-alt', class: 'fa-fw') %> Logout
            <% end %>
          </div>
        </li>
      </ul>
    <% end %>
  </div>
</nav>
